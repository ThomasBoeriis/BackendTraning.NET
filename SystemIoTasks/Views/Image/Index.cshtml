
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm(null,null,FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="form-group">
                <label>Fil</label>
                <input type="file" class="form-control" name="file" />
            </div>

            <div class="row">
                <div class="col-md-6">
                    @Html.Label("maxHeight")
                    @Html.TextBox("maxHeight",null,new {  @class="form-control"})
                </div>
                <div class="col-md-6">
                    @Html.Label("maxWidth")
                    @Html.TextBox("maxWidth", null, new { @class = "form-control" })
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Resize</button>

        }
    </div>
    <div class="col-md-12">
        @if (Model != null)
        {
            <div class="panel">
                <div class="panel-body">
                    <h4>Dit resized billede</h4>
                    <img src="data:image/png;base64,@(Convert.ToBase64String(Model.ToArray(),0,Model.ToArray().Length))" />
                </div>
            </div>
        }
    </div>
</div>