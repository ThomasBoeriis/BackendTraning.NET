@model MemoryStream
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>


<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm(null,null,FormMethod.Post,new { enctype = "multipart/form-data" }))
        {
            <div class="form-group">
                @Html.Label("file")
                <input type="file" name="file" class="form-control" />
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.Label("maxHeight")
                        @Html.TextBox("maxHeight", null, new { @class = "form-control" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.Label("maxWidth")
                        @Html.TextBox("maxWidth", null, new { @class = "form-control" })
                    </div>
                </div>
            </div>
            
            

            <input type="submit" value="Resize Billede" class="btn btn-primary" />
        }
    </div>

    @if (Model != null)
    {
        <div style="display:inline-block; margin-top:40px;">
            <div class="panel">
                <div class="panel-body">
                    <h4>Dit resized billede.</h4>
                    <img src="data:image/png;base64,@(Convert.ToBase64String(Model.ToArray(), 0, Model.ToArray().Length))" />
                </div>
            </div>
        </div>
    }
</div>
