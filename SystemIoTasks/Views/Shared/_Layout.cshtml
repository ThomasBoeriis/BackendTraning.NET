<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/highlight.js/9.6.0/styles/default.min.css">
    
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("System I/O", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Upload", "Index", "Upload")</li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button">Fil/Mappe visning</a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("List Filer", "Index", "Files")</li>
                            <li>@Html.ActionLink("List Filer med info", "ListFilesAndInfo", "Files")</li>
                            <li>@Html.ActionLink("Opret mapper", "Index", "Folders")</li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("Billede Galleri", "Index", "Gallery")</li>

                    
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button">System.Drawing</a>
                        <ul class="dropdown-menu">
                            @*<li>@Html.ActionLink("Læs billede informationer", "Resize", "Drawing")</li>*@
                            <li>@Html.ActionLink("Resize billede", "Index", "Image")</li>
                            <li>@*@Html.ActionLink("Copyright på billeder", "Watermark", "Drawing")*@</li>

                        </ul>
                    </li>

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button">Fil læsning</a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Læs og opdater filer", "ReadFile", "Files")</li>
                            @*<li>@Html.ActionLink("Læs fil og indsæt data i Database", "InsertToDB", "Files")</li>*@
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - System IO / Drawing</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="//cdnjs.cloudflare.com/ajax/libs/highlight.js/9.6.0/highlight.min.js"></script>
    <script>hljs.initHighlightingOnLoad();</script>
    @RenderSection("scripts", required: false)

    
</body>
</html>
